{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "f5Name": {
      "type": "string"
    },
    "f5Size": {
      "type": "string"
    },
    "numberOFBIGIPs": {
      "type": "int"
    },
    "adminUsername": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    }
  },
  "variables": {
    "avsetNamePrefix": "[concat(parameters('f5Name'),'-avset')]",
    "externalNICNamePrefix": "[concat(parameters('f5Name'),'-externalnic')]",
    "udrNICNamePrefix": "[concat(parameters('f5Name'),'-udrnic')]",
    "newStorageAccountName": "[concat(parameters('f5Name'),'store')]",
    "additionNICNamePrefix": "[concat(parameters('f5Name'),'-nic')]"
  },
  "resources": [
    {
      "apiVersion": "2015-06-15",
      "tags": {
        "displayName": "BIG-IP VM"
      },
      "copy": {
        "count": "[parameters('numberOFBIGIPs')]",
        "name": "vmcopy"
      },
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[concat(parameters('f5Name'),copyIndex())]",
      "location": "[resourceGroup().location]",
      "plan": {
        "name": "f5-bigip-virtual-edition-best-byol",
        "publisher": "f5-networks",
        "product": "f5-big-ip"

      },
      "properties": {
        "availabilitySet": {
          "id": "[resourceId('Microsoft.Compute/availabilitySets',variables('avsetNamePrefix'))]"
        },
        "hardwareProfile": {
          "vmSize": "[parameters('f5Size')]"
        },
        "osProfile": {
          "computerName": "[parameters('f5Name')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "f5-networks",
            "offer": "f5-big-ip",
            "sku": "f5-bigip-virtual-edition-best-byol",
            "version": "latest"
          },
          "osDisk": {
            "name": "[concat(parameters('f5Name'), 'osDisk',copyIndex())]",
            "vhd": {
              "uri": "[concat('http://',variables('newStorageAccountName'),'.blob.core.windows.net/',variables('newStorageAccountName'),'/',parameters('f5Name'),copyIndex(),'.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',concat(variables('externalNICNamePrefix'),copyIndex()))]",
              "properties": {
                "primary": true
              }
            },
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',concat(variables('udrNICNamePrefix'),copyIndex()))]",
              "properties": {
                "primary": false
              }
            },
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',concat(variables('additionNICNamePrefix'),copyIndex(2),copyIndex()))]",
              "properties": {
                "primary": false
              }
            },
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',concat(variables('additionNICNamePrefix'),copyIndex(3),copyIndex()))]",
              "properties": {
                "primary": false
              }
            },
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',concat(variables('additionNICNamePrefix'),copyIndex(4),copyIndex()))]",
              "properties": {
                "primary": false
              }
            },
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',concat(variables('additionNICNamePrefix'),copyIndex(5),copyIndex()))]",
              "properties": {
                "primary": false
              }
            },
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',concat(variables('additionNICNamePrefix'),copyIndex(6),copyIndex()))]",
              "properties": {
                "primary": false
              }
            },
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',concat(variables('additionNICNamePrefix'),copyIndex(7),copyIndex()))]",
              "properties": {
                "primary": false
              }
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true,
            "storageUri": "[concat('http://',variables('newstorageAccountName'),'.blob.core.windows.net')]"
          }
        }
      }
    }
  ]
}